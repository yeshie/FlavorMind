{
  "expo": {
    "name": "FlavorMind",
    "slug": "FlavorMind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#E8F5E9"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.flavormind.app",
      "icon": "./src/assets/icon.png",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "FlavorMind uses your location to show seasonal foods near you.",
        "NSPhotoLibraryUsageDescription": "FlavorMind needs access to your photos to upload recipe images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/icon.png",
        "backgroundColor": "#E8F5E9"
      },
      "package": "com.flavormind.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "READ_MEDIA_IMAGES",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./src/assets/icon.png",
      "backgroundColor": "#E8F5E9"
    }
  }
}
